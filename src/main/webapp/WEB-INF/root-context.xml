    <jpa:repositories base-package="**.dao" />
    
    <!-- @Controller 외에 스캔 -->
    <context:component-scan base-package="org.example" use-default-filters="true">
        <!-- Controller는 자동 스캔에 포함시키지 않는다. -->
        <context:exclude-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
        <context:exclude-filter type="regex" expression="org\.example\.global\.config\.filter\..*"/>
        <context:exclude-filter type="regex" expression="org\.example\.global\.config\.mvc\..*"/>
    </context:component-scan>

